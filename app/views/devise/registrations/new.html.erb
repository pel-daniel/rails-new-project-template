<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4 devise-screen">

  <div id="row">
    <div id="login-logo">
    </div>
  </div>

  <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: t(:email), class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: 'off', placeholder: t(:password), class: 'form-control', aria: { describedby: 'helpBlock' } %>

      <% if @validatable %>
        <span id="helpBlock" class="help-block"><%= t :minimum_length, length: @minimum_password_length %></span>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: t(:password_confirmation), class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <!--<%= f.check_box :remember_me %> <%= f.label :remember_me %>-->
    <% end -%>

    <div class="form-group">
      <%= f.submit t(:sign_up), class: 'btn btn-primary btn-block' %>
    </div>

    <div class="form-group">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>

</div>
